{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/index.ts",
      "runtimeArgs": ["-r", "ts-node/register"], // Bu satırı ekleyin
      "args": [], // Komut satırı argümanları buraya eklenebilir
      "cwd": "${workspaceFolder}", // Çalışma dizini
      "console": "integratedTerminal" // Konsol çıktıları için
    }
  ]
}
